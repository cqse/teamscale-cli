{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Teamscale Precommit Analysis",
            "type": "shell",
            "command": "${config:python.pythonPath} -c 'from teamscale_precommit_client.precommit_client import run;run()' '${file}'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
